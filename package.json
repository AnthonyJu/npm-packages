{
  "name": "npm-packages",
  "private": true,
  "packageManager": "pnpm@8.3.0",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --fix",
    "lint:style": "stylelint **/*.{css,scss,vue} --fix",
    "release eslint-config": "cd ./packages/eslint-config && bumpp --no-commit --no-tag --no-push  && pnpm publish",
