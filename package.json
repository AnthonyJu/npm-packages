  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.5",
    "bumpp": "^9.1.0",
    "eslint": "^8.39.0",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.6",
    "stylelint": "^15.6.0",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.0.0",
    "typescript": "^5.0.4"
  }
}
